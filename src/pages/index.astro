---
import Layout from '../layouts/Layout.astro';
import Welcome from '../components/Welcome.astro';
import VolleyballBall from '../components/VolleyballBall.astro';
import MessageSystem from '../components/MessageSystem.astro';
import MusicControl from '../components/MusicControl.astro';
---

<Layout>
	<Welcome />

	<div class="page" id="main-content">
		<header class="page__header">
			<h1 class="page__name">Haru</h1>
			<p class="page__sub">esto es para ti âœ¦</p>
		</header>

		<VolleyballBall />
	</div>

	<MessageSystem />
	<MusicControl />
</Layout>

<style>
	.page {
		display: flex;
		flex-direction: column;
		align-items: center;
		min-height: 100dvh;
		width: 100%;
		padding: 0 0 8rem;
		opacity: 0;
		transition: opacity 0.8s ease;
	}

	.page__header {
		width: 100%;
		padding: 2.5rem 1.5rem 1.2rem;
	}

	.page__name {
		font-family: var(--serif);
		font-size: 2.4rem;
		font-weight: 400;
		letter-spacing: 0.1em;
		color: var(--text-bright);
		line-height: 1.1;
	}

	.page__sub {
		font-size: 0.8rem;
		letter-spacing: 0.2em;
		color: var(--text-muted);
		margin-top: 0.4rem;
	}
</style>

<script>
	const main = document.getElementById('main-content')!;

	document.addEventListener('welcome:done', () => {
		main.style.opacity = '1';
	});
</script>
